<div class="panel panel-default">
  <div class="panel-heading text-right">
    <%= link_to '新規作成', signup_path %>
  </div>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>写真</th>
          <th>名前</th>
          <th>mail</th>
          <th>プラン</th>
          <th>コイン数</th>
          <th>ログイン日</th>
          <th>最新アクション日</th>
          <th>メッセージ</th>
          <th>いいね数</th>
          <th>ありがとう数</th>
          <th>通報数</th>
          <th>被通報数</th>
          <th>身分確認</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @users.each do |user| %>
        <tr>
          <th><%= user.id %></th>
          <th><%= image_tag user.image1, :size => '50' %></th>
          <td><%= user.nickname %></td>
          <td><%= user.mail %></td>
          <td><%= user.plan %></td>
          <td>100</td>
          <td>1/1</td>
          <td>1/1</td>
          <td>1/1</td>
          <td><%= user.to_likes.count %></td>
          <td><%= user.from_likes.count %></td>
          <td><%= user.to_block_users.count %></td>
          <td><%= user.from_block_users.count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>