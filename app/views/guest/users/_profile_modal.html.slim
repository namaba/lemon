#ProfileEditModal1.modal.fade[tabindex="-1"]
  .modal-dialog
    .modal-margin
      .modal-content
        .modal-header
          button.close[type="button" data-dismiss="modal"]
            span
              | ×
        .modal-body
          = form_for @user.user_profile, url: user_path(current_user) do |f|
            .row
              .col-md-12.text-center
                .form-group
                  = f.text_area :introduce, :size => "60x10", class: 'form-control', autofocus: true, required: true
                = f.submit 'プロフィールを更新', class: "btn btn-primary"


/ 基本プロフィール編集
#ProfileEditModal2.modal.fade[tabindex="-1"]
  .modal-dialog
    .modal-margin
      .modal-content
        .modal-header
          button.close[type="button" data-dismiss="modal"]
            span
              | ×
        .modal-body
          = form_for @user.user_profile, url: user_path(current_user) do |f|
            .row
              .col-md-12.select
                .form-group
                  label
                    | 属性
                  = f.select :sex, UserProfile.sexes.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
            .row
              .col-md-12.select
                .form-group
                  label
                    | タチ・ネコ
                  = f.select :play_style, UserProfile.play_styles.keys.to_a, {prompt:"選択してください"}, {class: 'form-control'}

            .row
              .col-md-12.select
                .form-group
                  label
                    | 生年月日
                  == sprintf( f.date_select(:birthday, use_month_numbers: true, start_year: 1930, end_year:   (Time.now.year - 18), default: Date.new(1990, 1, 1), date_separator: '%s', datetime_separator: '%s' ), '年', '月') + '日'
            .row
              .col-md-12.select
                .form-group
                  label
                    | 居住地
                  = f.collection_select :address, JpPrefecture::Prefecture.all, :code, :name, {prompt:"選択してください"} ,{:class => "form-control"}
            .row
              .col-md-12.select
                .form-group
                  label
                    | 身長
                  = f.select :height, options_for_select((140..200).step(5).map{|s| ["#{s}cm", s]}), {prompt:"選択してください"}, { class: 'form-control'}
            .row
              .col-md-12.select
                .form-group
                  label
                    | スタイル
                  = f.select :style, UserProfile.styles.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
            .row
              .col-md-12.select
                .form-group
                  label
                    | 職業
                  = f.select :job, UserProfile.jobs.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
            .row
              .col-md-12.select
                .form-group
                  label
                    | 年収
                  = f.select :income, UserProfile.incomes.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
            .row
              .col-md-12.select
                .form-group
                  label
                    | 血液型
                  = f.select :blood_type, UserProfile.blood_types.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
            .row
              .col-md-12.select
                .form-group
                  label
                    | 学歴
                  = f.select :school, UserProfile.schools.keys.to_a, {prompt:"選択してください"}, class: 'form-control'
              .col-md-12.text-center
                .form-group
                  label
                    | 写真
                  = f.file_field :image1, class: "form-control image-field"
                  = f.file_field :image2, class: "form-control image-field"
                  = f.file_field :image3, class: "form-control image-field"
                = f.submit 'プロフィールを更新', class: "btn btn-primary"


