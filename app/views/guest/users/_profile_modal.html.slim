                  = radio_button_tag :charge, "one_hundred_coins",{},class: 'hide_button'
                  = label_tag :charge_one_hundred_coins, image_tag('one_hundred_coins.png'), class: 'charge_button'
                / = submit_tag "プロフィールを更新", :class => "btn btn-info"


