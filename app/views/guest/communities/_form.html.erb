<%= form_for(@community) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :category %>
  <%= f.text_area :category %>

  <%= f.label :introduce %>
  <%= f.text_area :introduce %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit '保存', data: { confirm: 'この内容で保存してもいいですか', disable_with: '処理中...' } %>

<% end %>