<%= form_for(@topic, url: topics_path ) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.hidden_field :community_id, value: @community.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit '保存', data: { confirm: 'この内容で保存してもいいですか', disable_with: '処理中...' } %>

<% end %>