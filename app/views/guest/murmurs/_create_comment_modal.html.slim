.modal id="createCommentModal#{murmur.id}"
  .modal-dialog
    .modal-margin
      .modal-content
        .modal-header
          button.close[type="button" data-dismiss="modal"]
            span
              | ×
        .modal-body
          = form_for(@murmurcomment, url: murmur_comments_path) do |f|
            .row
              .col-md-12.text-center
                .form-group
                  = f.text_area :comment, class: 'form-control'

                  = f.hidden_field :user_id, value: current_user.id
                  = f.hidden_field :murmur_id, value: murmur.id
                = f.submit 'コメント', class: "btn btn-primary"